<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-3 row row-cols-3">
        <% blogs.forEach(blog => { %>
        <div class="col">  
        <div class="card col" style="width: 18rem; height: 20rem;">
            <img src="<%=blog.coverImageURL%>" class="card-img-top" style="width: 18rem; height:12rem; border-radius:2%;">
            <div class="card-body">
              <h5 class="card-title" style="width: 16rem; height:3rem; overflow: hidden;"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
            </div>
        </div>
        </div> 
        <% }) %>
    </div>
    <%- include('./partials/scripts') %>
</body>   
</html>