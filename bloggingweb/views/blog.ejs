<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="650vw">
        <pre class="mt-3"><%= blog.body %></pre>
    </div>
    <div class="container mt-3 mb-3">
       <img src="<%= blog.createdBy.profileImage %>" width="50px"> <%= blog.createdBy.fullName %>
    </div>
    <div class="container">
        <h1>Comments (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                  <input type="text" class="form-control" name="content" aria-describedby="emailHelp" placeholder="Enter Your Comment ">
                </div>
                
                <button type="submit" class="btn btn-sm btn-primary">Add</button>
              </form>
        <% } %>
    </div>
    <div class="container mt-3">
        <% comments.forEach(comment => { %>
         <div>
            <img src="<%= comment.createdBy.profileImage %>" width="50px"> <%= comment.createdBy.fullName %> 
            <pre><%= comment.content %></pre>
         </div>
        <% }) %>

    </div>
    <%- include('./partials/scripts') %>
</body>   
</html>